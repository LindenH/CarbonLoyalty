<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linden.carbonloyalty.Settings">

    <TextView
        android:id="@+id/settingsLabel"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginBottom="110dp"
        android:layout_marginStart="193dp"
        android:layout_marginTop="16dp"
        android:text="@string/settings_page_label"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginBottom="299dp"
        android:layout_marginEnd="410dp"
        android:layout_marginTop="206dp"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fontSizeTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fontSizeTextView"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="320dp"
        android:text="@string/font_size_settings_label"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar2"
        app:layout_constraintEnd_toStartOf="@+id/seekBar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekBar2" />

    <TextView
        android:id="@+id/notificationsTextView"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="320dp"
        android:text="@string/notifications_settings_label"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationSwitch"
        app:layout_constraintEnd_toStartOf="@+id/notificationSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notificationSwitch" />

    <Switch
        android:id="@+id/notificationSwitch"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="305dp"
        android:layout_marginEnd="660dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notificationsTextView"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginBottom="82dp"
        android:background="@color/appBackground"
        android:text="@string/save_settings"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2" />

</android.support.constraint.ConstraintLayout>
